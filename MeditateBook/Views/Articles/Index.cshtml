@model MeditateBook.Models.ArticlesListViewModel
@{
    ViewBag.Title = MeditateBook.Resources.Views.Shared._Layout.Articles;
}

<div class="row">

    <h2>@Html.Raw(@MeditateBook.Resources.Views.Articles._Articles.ArticleList)</h2>

    <ul>
        @for (int i = 0; i < Model.ListArticle.Count; i++)
        {
            <li>@Html.ActionLink(Model.ListArticle.ElementAt(i).Title, "Article", "Articles", new { id = Model.ListArticle.ElementAt(i).Id }, null)</li>
        }
    </ul>
</div>